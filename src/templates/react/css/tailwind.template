/* ----------------------------------- *\
  #CUSTOM PROPERTY
\* ----------------------------------- */

@font-face {
  font-family: value;
  src: url("/value");
}

@theme {

/**
* fonts
*/
  --font-name: value;

/**
* colors
*/
  --color-name: value;
}


/* ----------------------------------- *\
  #LAYER BASE
\* ----------------------------------- */

@layer base {
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    font-weight: normal;
  }
  ul {
    list-style: none;
  }
  img {
    -webkit-user-drag: none;
  }
  body {
    @apply h-full bg-color-name font-name overflow-x-hidden;
  }

/*
  ::-webkit-scrollbar {
