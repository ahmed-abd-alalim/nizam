/* ----------------------------------- *\
  #RESET
\* ----------------------------------- */

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
li {
  list-style: none;
}
a,
img,
span,
button,
ion-icon {
  display: block;
}
a {
  color: inherit;
  text-decoration: none;
}
img {
  height: auto;
}
input,
button {
  background: none;
  border: none;
  font: inherit;
  color: inherit;
}
input,
table {
  width: 100%;
}
button {
  cursor: pointer;
}
ion-icon {
  pointer-events: none;
}
html {
  font-family: var(--ff-name);
  /* font-size: value; */
  scroll-behavior: smooth;
}
body {
  background-color: var(--color-white);
  color: var(--color-white);
  /* font-size: value;
  line-height: value; */
}

